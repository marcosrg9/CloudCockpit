{
   "ts-node": {
      "files": true
   },
   "experimentalDecorators": true,
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
      ],
      "target": "ES2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "esModuleInterop": true,
      "noImplicitReturns": false,
      "resolveJsonModule": true,
      "skipLibCheck": true
   },
   "exclude": [
      "./public",
      "./node_modules"
   ]
}